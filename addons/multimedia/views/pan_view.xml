<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="pan_form_tree_view" model="ir.ui.view">
           <field name="name">pan.form.tree</field>
            <field name="model">pan.form</field>
            <field name="arch" type="xml">
                <tree string="Pan Form" decoration-danger="state in ('done')" decoration-success="state in ('draft')" decoration-info="state in ('processing')">
                    <field name="name"/>
                    <field name="seq_no"/>
                    <field name="party_name"/>
                    <field name="mobile_no"/>
                    <field name="assigned_to_uid" groups="multimedia.media_forms_management"/>
					<field name="create_uid"/>
					<field name="create_date"/>
					<field name="state"/>
				</tree>
            </field>
        </record>

        <!--  Major Pan card-->

        <record id="major_pan_form_view" model="ir.ui.view">
            <field name="name">pan.form</field>
            <field name="model">pan.form</field>
            <field name="arch" type="xml">
              <form string="Pan Form">
                <header>
                    <button name="action_process" type="object" states="draft" string="Process" class="oe_highlight" groups="multimedia.media_forms_employee,multimedia.media_forms_management"/>
                    <button name="action_reset" type="object" states="processing" string="Reset" class="oe_highlight" groups="multimedia.media_forms_employee,multimedia.media_forms_management"/>
                    <button name="action_done" type="object" states="processing" string="Done" class="oe_highlight" groups="multimedia.media_forms_employee,multimedia.media_forms_management"/>
                    <button name="action_verify" type="object" states="done" string="Verify" class="oe_highlight" groups="multimedia.media_forms_management"/>
                    <button name="action_view" type="object" attrs="{'invisible':[('state','!=','draft')]}" icon="fa-mail-forward" class="btn btn-success" string="View" invisible="1"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,processing,done"/>
				</header>
				<sheet>
                    <div class="oe_title">
						<h1>
							<field name="seq_no" readonly="1"/>
						</h1>
					</div>
					<group>
						<group>
							<field name="district_id" invisible="1"/>
							<field name="village_id" invisible="1"/>
							<field name="assigned_to_uid" groups="multimedia.media_forms_management" domain="[('user_type', '=', 'employee')]"/>
							<field name="name" attrs="{'readonly': [('state', '=', 'done')],'invisible': [('state', '=', 'draft')]}"/>
							<field name="party_name" attrs="{'readonly': [('state', '=', 'done')],'required': [('state', '=', 'processing')],'invisible': [('state', '=', 'draft')]}"/>
							<field name="father_name" attrs="{'readonly': [('state', '=', 'done')],'required': [('state', '=', 'processing')],'invisible': [('state', '=', 'draft')]}"/>
							<field name="dob" attrs="{'readonly': [('state', '=', 'done')],'required': [('state', '=', 'processing')],'invisible': [('state', '=', 'draft')]}"/>
							<field name="mail_id" attrs="{'readonly': [('state', '=', 'done')],'required': [('state', '=', 'processing')],'invisible': [('state', '=', 'draft')]}"/>
							<field name="mobile_no" attrs="{'readonly': [('state', '=', 'done')],'required': [('state', '=', 'processing')],'invisible': [('state', '=', 'draft')]}"/>
						</group>
						<group>
<!--                            <field name="user_logo" widget='image' class="oe_avatar" nolabel="1"/>-->
							<field name="create_uid" attrs="{'invisible': [('state', '=', 'draft')]}" groups="multimedia.media_forms_employee,multimedia.media_forms_management"/>
							<field name="write_uid" attrs="{'invisible': [('state', '=', 'draft')]}" groups="multimedia.media_forms_employee,multimedia.media_forms_management"/>
							<field name="create_date" attrs="{'invisible': [('state', '=', 'draft')]}" groups="multimedia.media_forms_employee,multimedia.media_forms_management"/>
							<field name="write_date" attrs="{'invisible': [('state', '=', 'draft')]}" groups="multimedia.media_forms_employee,multimedia.media_forms_management"/>
                            <field name="address" attrs="{'readonly': [('state', '=', 'done')],'required': [('state', '=', 'processing')],'invisible': [('state', '=', 'draft')]}"/>
						</group>
					</group>
                    <group>
                        <group>
                            <field name="aadhar_front" widget='image' attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="aadhar_back" widget='image' attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="pan_front" widget='image' attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="pan_back" widget='image' attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="writtern_form" widget='image' attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <field name="user_logo" widget='image' class="oe_avatar" invisible="1"/>
                        </group>
                    </group>
				</sheet>
              </form>
            </field>
        </record>

